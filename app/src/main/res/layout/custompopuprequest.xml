<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="350dp"
    android:layout_height="475dp"
    android:padding="5dp"
    android:layout_gravity="center"
    android:background="@color/AliceBlue">

    <ImageView
        android:id="@+id/imagePopup"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/questionmark"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/textPopupRequest"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="100dp">

        <Button
            android:id="@+id/closePopupRequestButton"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Close"
            android:layout_margin="5dp"
            android:layout_gravity="start"
            android:padding="5dp"
            android:background="@color/Tomato"/>

        <Button
            android:id="@+id/acceptRequest"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="Accept"
            android:padding="5dp"
            android:background="@color/Tomato"/>

        <Button
            android:id="@+id/deleteRequest"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_gravity="end"
            android:text="Delete"
            android:padding="5dp"
            android:background="@color/Tomato"/>

    </LinearLayout>

</LinearLayout>